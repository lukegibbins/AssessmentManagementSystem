                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="Interactive.RowNo4" class="custom-label"></label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="Interactive.RowNo4" value="4" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row has-success">
                <div class="col-sm-3">
                    <label asp-for="Interactive.CorrectRowNo4" class="custom-label"></label>
                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.Interactive.CorrectRowNo4, Model.AnswerOptions, new { @class = "form-control" })
                </div>
            </div>
            <hr />
            <div class="form-group row has-warning">
                <div class="col-sm2">
                    <label asp-for="Interactive.Feedback" class="custom-label"></label>
                </div>
                <div class="col-lg-6">
                    @Html.TextAreaFor(m => m.Interactive.Feedback, 10, 15, new { @class = "form-control" })
                </div>
            </div>
            <hr />
            @*Image Upload here*@
            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Interactive.Image" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input type="file" name="files" multiple class="form-control" />
                </div>
            </div>
            @if (Model.Interactive.Image != null)
            {
                <div style="padding-left:190px">
                    <img src="@Model.Interactive.Image" style="border-radius:5px; width:35%; border: 1px solid #bbb9b9" />
                </div>
            }
            <hr />
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.Interactive.Include, new { @checked = true }) Include question in assessment
                </label>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete Question" class="btn btn-default btn-danger" />
            <a asp-page="/Questions/Index" asp-route-id="@Model.Interactive.AssessmentId" class="btn btn-default btn-primary">Back to Questions</a>
        </div>
    </div>
</form>


