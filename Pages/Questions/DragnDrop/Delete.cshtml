@model InteractiveAssessment.Pages.Questions.DragnDrop.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Delete Interactive Question (List Sort) <button type="button" class="btn btn-success btn-xs" data-toggle="modal" data-target="#myModal">Help</button></h2>
<hr />

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Interactive Question Support</h4>
            </div>
            <div class="modal-body">
                <p>
                    An Interactive List-Sort question is a question which requests students to drag and drop items of a list into a specific order in relation to the question being asked.
                    <br /><br />
                    The items of the list are ordered from top to bottom, with the highest or largest item value being first; there are 4 items in total in the list.
                    <br /><br />
                    An example question for an interactive question format could be: “Drag these entries in order of their size”.
                </p>
                <br /><br />
                <p style="text-decoration:underline">Property Definitions</p>
                <ul>
                    <li>
                        List Item 1 = This refers to the 1st item which is at the top of the list
                    </li>
                    <li>
                        List Item 2 = This refers to the 2nd item in the list
                    </li>
                    <li>
                        List Item 3 = This refers to the 3rd item in the list
                    </li>
                    <li>
                        List Item 4 = This refers to the 4th item which is at the bottom of the list
                    </li>
                    <li>
                        Default Position = Refers to the position of the item the student will see
                    </li>
                    <li>
                        Correct Position = Refers to the correct position in the list where the item should be situated for a correct answer
                    </li>
                </ul>
                <br />
                <br />
                <p style="text-decoration:underline"><strong>View the clip below for an example of this question</strong></p>
                <video width="400" height="240" controls>
                    <source style="text-align:center" src="~/IQ.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


@*Form now has compatibillity for image upload in form*@
<form method="post" enctype="multipart/form-data">
    <div class="form-border-main">

        <input type="hidden" asp-for="Interactive.Id" value="@Model.Interactive.Id" />
        <input type="hidden" asp-for="Interactive.AssessmentId" value="@Model.Interactive.AssessmentId" />
        <input type="hidden" asp-for="Interactive.QuestionType" value="Interactive" />
