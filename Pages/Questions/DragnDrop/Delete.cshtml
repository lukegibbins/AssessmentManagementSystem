                    <label asp-for="Interactive.Name2" class="custom-label" style="text-decoration:underline"></label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="Interactive.Name2" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="Interactive.RowNo2" class="custom-label"></label>
                </div>
                <div class="col-sm-2">
