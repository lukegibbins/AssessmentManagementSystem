                    <input asp-for="Interactive.Name1" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="Interactive.RowNo1" class="custom-label"></label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="Interactive.RowNo1" value="1" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row has-success">
                <div class="col-sm-3">
                    <label asp-for="Interactive.CorrectRowNo1" class="custom-label"></label>
                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.Interactive.CorrectRowNo1, Model.AnswerOptions, new { @class = "form-control" })
                </div>
            </div>
            <hr />
            <div class="form-group row">
