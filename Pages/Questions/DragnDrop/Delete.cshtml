                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.Interactive.CorrectRowNo2, Model.AnswerOptions, new { @class = "form-control" })
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="Interactive.Name3" class="custom-label" style="text-decoration:underline"></label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="Interactive.Name3" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="Interactive.RowNo3" class="custom-label"></label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="Interactive.RowNo3" value="3" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row has-success">
                <div class="col-sm-3">
                    <label asp-for="Interactive.CorrectRowNo3" class="custom-label"></label>
                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.Interactive.CorrectRowNo3, Model.AnswerOptions, new { @class = "form-control" })
